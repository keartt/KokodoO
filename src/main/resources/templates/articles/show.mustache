{{>layouts/header}} <!-- 게시판 내용 /articles/{id} -->

<table class="table">
    <thead>
        {{#article}}  <!-- 모델에 등록된 데이터 가져오는 타입 -->

        <th width =  "1400px">{{title}}</th>
        <th scope="col">ID</th>
        <th>{{id}}</th>


    </thead>
    <tbody>
    <tr>
        <!-- HTML 에서는 GET,POST 방식만 지원하기에 a태그를 이용해 링크 사용(get 방식) -->
        <td  rowspan="2">{{content}}</td>
        <td><a href="/articles/{{article.id}}/edit" class="btn btn-primary" > 수정 </a></td>
        <td><a href="/articles/{{article.id}}/delete" class="btn btn-danger" > 삭제 </a></td>
    </tr>

    <tr>
        <td colspan="2"><a href="/articles/new" class="btn btn-primary">내 계획 공유</a> </td>
        <!--articles 페이지로 링크 -->

    </tr>
    </tbody>
        {{/article}}  <!-- 변수 사용  범위 지정 -->
</table>


{{>comments/_comments}}

{{>layouts/footer}}