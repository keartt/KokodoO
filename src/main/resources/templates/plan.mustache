<!-- 화면캡쳐 -->
<script>
    const capBtn = document.querySelector(".btn_download");

    capBtn.addEventListener("click", () => captureSave());

    function captureSave() {
        html2canvas(document.getElementById("capture_area")).then(
                function (canvas) {
                    var el = document.createElement("a");
                    el.href = canvas.toDataURL("image/jpeg");
                    el.download = "map.jpg"; //다운로드 할 파일명 설정
                    el.click();
                }
        );
    }
</script>




